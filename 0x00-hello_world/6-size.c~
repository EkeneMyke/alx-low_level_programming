#include <stdio.h>
/**
 *main - Entry point
 *Description: Using the sizeof function
 *Return: Always 0
 */
int main(void)
{
	int n;
        char x;
        float m;
        long int s;
        long long int l;

	printf("Size of a char: %d byte(s)\n", x, sizeof(char));
	printf("Size of an int: %d byte(s)\n", n, sizeof(int));
	printf("Size of a long int: %d byte(s)\n", s, sizeof(long int));
	printf("Size of a long long int: %d byte(s)\n", l, sizeof(long long int));
	printf("Size of a float: %d byte(s)\n", m, sizeof(float));
	return (0);
}
